<h1>Instructor Dashboard</h1>
<h3><%= @teacher.friendly_name %></h3>
<p><%= @teacher.email %></p>
<p><%= @teacher.phone %></p>
<p><%= @teacher.user_type %></p>

<div>
  <p>
    <%= link_to "Edit Profile", "/teachers/#{@teacher.id}/edit", class: "btn btn-default" %>
    <%= link_to "Delete Profile", "/teachers/#{@teacher.id}", method: :delete, data:{confirm: "Are you sure you want to delete your teacher profile?"}, class: "btn btn-default" %>
  </p>
</div>

<h2>Cohorts</h2>
<% @teacher.cohorts.each do |cohort| %>
  <p>
    <%= link_to cohort.name, "/cohorts/#{cohort.id}" %>&nbsp;
    <%= link_to "Edit", "/cohorts/#{cohort.id}/edit", class: "btn btn-default btn-xs" %>&nbsp;
    <%= link_to "Delete", "/cohorts/#{cohort.id}", method: :delete, data:{confirm: "Are you sure you want to delete this cohort?"}, class: "btn btn-default btn-xs" %>
  </p>
<% end %>
<div>
  <%= link_to "New Cohort", "/cohorts/new", class: "btn btn-default" %>
</div>
