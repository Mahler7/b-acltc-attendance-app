<h1><%= @cohort.name %></h1>
<p>Start Date: <%= @cohort.friendly_start_date %></p>
<p>End Date: <%= @cohort.friendly_end_date %></p>

<div>
  <%= link_to "Back", "/teachers", class: "btn btn-default" %>
  <%= link_to "Edit Cohort", "/cohorts/#{@cohort.id}/edit", class: "btn btn-default" %>
  <%= link_to "Delete Cohort", "/cohorts/#{@cohort.id}", method: :delete, data:{confirm: "Are you sure you want to delete this cohort?"}, class: "btn btn-default" %>
</div>

<h2>Lectures</h2>
<%= link_to "New Lecture", "/lectures/new", class: "btn btn-default" %>
<% @cohort.lectures.each do |lecture| %>
  <p>
    <%= link_to lecture.name, "/lectures/#{lecture.id}"%>&nbsp;
    <%= link_to "Edit Lecture", "/lectures/#{lecture.id}/edit", class: "btn btn-default btn-xs" %>&nbsp;
    <%= link_to "Delete Lecture", "/lectures/#{lecture.id}", method: :delete, data:{confirm: "Are you sure you want to delete this lecture?"}, class: "btn btn-default btn-xs" %>
  </p>
<% end %>

<h2>Students</h2>
<% @cohort.students.each do |student| %>
  <p>
    <%= link_to student.friendly_name, "/students/#{student.id}" %>&nbsp;
    <%= link_to "Edit Student", "/students/#{student.id}/edit", class: "btn btn-default btn-xs"%>&nbsp;
    <%= link_to "Delete Student", "/students/#{student.id}", method: :delete, data:{confirm: "Are you sure you want to delete this student?"}, class: "btn btn-default btn-xs" %>
  </p>
<% end %>